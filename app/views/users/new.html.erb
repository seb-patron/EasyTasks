<%= bootstrap_form_for(@user) do |user| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this todo from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= user.text_field :first_name, :placeholder => "First name" %>
  </div>

  <div class="field">
    <%= user.text_field :last_name, :placeholder => "Last name" %>
  </div>

  <div class="field">
    <%= user.email_field :email, :placeholder => "Email" %>
  </div>

  <div class="field">
    <%= user.password_field :password, :placeholder => "Password" %>
  </div>

  <div class="actions">
    <%= user.submit "Signup", class: "btn btn-success"%>
  </div>
  
<% end %>
