   			 	<%= f.text_field :title %>
  			</div>
  			<div class="field">
    			<%= f.text_area :notes %>
  			</div>
  			<div class="actions form-group">  
    			<%= f.submit "Add Task", class: "btn btn-success" %>
  			</div>
		<% end %>